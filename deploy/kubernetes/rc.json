{
  "kind": "ReplicationController",
  "apiVersion": "v1beta3",
  "metadata": {
    "name": "ws-front",
    "labels": {
      "name": "ws-front",
      "major": "0",
      "minor": "0",
      "build": "13"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "ws-front",
      "major": "0",
      "minor": "0",
      "build": "13"
    },
    "template": {
      "metadata": {
        "name": "ws-front",
        "labels": {
          "name": "ws-front",
          "major": "0",
          "minor": "0",
          "build": "13"
        }
      },
      "spec": {
        "volumes": [{
            "name": "secrets",
            "secret": {
              "secretName": "site-ssl-secret"
            }
        }],
        "containers": [
          {
            "name": "ws-front",
            "image": "gcr.io/epsilon-cloud-rnd/ws-front:0.0.13",
            "command": [
              "/bin/bash",
              "/usr/src/start.sh"
            ],
            "ports": [
                {
                  "name": "ws-front-http",
                  "containerPort": 80
                },
                {
                  "name": "ws-front-https",
                  "containerPort": 443
                }
            ],
            "env": [
              {
                "name": "ENABLE_SSL",
                "value": "true"
              },
              {
                "name": "ENABLE_BASIC_AUTH",
                "value": "true"
              }
            ],
            "volumeMounts": [
              {
                "name": "secrets",
                "readOnly": true,
                "mountPath": "/etc/secrets"
              }
            ]
          }
        ]
      }
    }
  }
}
